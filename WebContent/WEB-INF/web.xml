<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Twister</display-name>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.upmc.twister.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.upmc.twister.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Create</servlet-name>
		<servlet-class>com.upmc.twister.servlets.CreateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/user/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/user/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Create</servlet-name>
		<url-pattern>/user/create</url-pattern>
	</servlet-mapping>
	
	
	<recource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/Database</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</recource-ref>
</web-app>